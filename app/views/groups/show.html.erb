
  <div id="left_group_container">
    <table id="group">
      <tr>
        <td>
          <h4 class="subheader"><%= "Group Overflow"%></h4>
          <hr>
          <ul id="group-0" class="droptrue" data-pod-id="" data-update-url="/courses/<%= current_course.id %>/groups/update_through_ajax">
            <li class="ui-state-default"></li>
            <% @students.each do |student|%>
              <li id="student-<%= student.id %>" data-student-id="<%= student.id %>" class="ui-state-default"><%= student.first_name %> <%= student.last_name %></li>
            <% end %>
          </ul>
        </td>
      </tr>
    </table>
  </div><!--left_group_container END-->

  <div id="right_group_container">
    <ul class="small-block-grid-3">
      <% @pods.each_with_index do |pod, index| %>
        <li>
          <table id="group">
            <tr>
              <td>
                <h4 class="subheader"><%= "Group #{index+1}" %></h4>
                <hr>
                <ul id="group-<%= index %>" class="droptrue" data-pod-id="<%= pod.id %>" data-update-url="/courses/<%= current_course.id %>/groups/update_through_ajax">
                  <li class="ui-state-default"></li>
                  <% students = pod.student_assignments.map(&:student) %>

                  <% students.each do |student| %>

                    <li id="student-<%= student.id %>" data-student-id="<%= student.id %>" class="ui-state-default"><%= student.first_name %></li>
                  <% end %>
                </ul>
              </td>
            </tr>
          </table>
        </li>

        <!-- conditional to add special row to keep tables from moving -->
        <% if (index+1)%3 == 0%>
          <hr>
        <% end %>

      <% end %>
    </ul>
  </div><!--right_group_container END-->

