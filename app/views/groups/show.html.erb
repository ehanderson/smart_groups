<div id="left_group_container">
  <table id="group">
    <tr>
      <td>
        <h4 class="subheader" style="text-align:center;"><%= "Group Overflow"%></h4>
        <hr>
        <ul class="droptrue">
          <li class="hidden" style="display: none">
          <% @students.each do |student|%>
          <li id="student-<%= student.id %>" class="ui-state-default"><%= student.first_name %> <%= student.last_name %></li>
          <% end %>
        </ul>
      </td>
    </tr>
  </table>
  <%= link_to("Back to Students", "#", class: "small button", style: "margin-left:30px;width:150px;") %><br>
  <%= link_to("Back to Course list", "#", class: "small button success", style: "margin-left:30px;width:150px;") %>
</div><!--left_group_container END-->

<div id="right_group_container">
  <ul class="small-block-grid-3">
    <li class="hidden" style="display: none">
    <% @groups.each_with_index do |group, index| %>
    <li>
      <table id="group">
        <tr>
          <td>
            <h4 class="subheader" style="text-align:center;"><%= "Group #{index+1}" %></h4>
            <hr>
            <ul id="group-<%= index %>" class="droptrue">
              <li class="hidden" style="display: none">
              <% group.each do |student|%>
              <li id="student-<%= student.id %>" class="ui-state-default"><%= student.first_name %></li>
              <% end %>
            </ul>
          </td>
        </tr>
      </table>
    </li>
    <!-- conditional to add special row to keep tables from moving -->
    <% if (index+1)%3 == 0%>
    <hr>
    <% end %>
  <% end %>
  </ul>
</div><!--right_group_container END-->






