
<h1>The New Generation</h1>

   
  <div id="student_list">
    <ul id="student_container">
      <li id="student_element_in_container"><h3>asdf</h3> </li>
      <%@students.each do |student|%>
        <li id="student_element_in_container"><%=student.first_name%> <%= student.last_name %></li>
      <%end%>
    </ul>
  </div>


<div id="option_box_container">

<table>
  <tr>
    <td>
       <h4 class="subheader"><%= "Options 1" %></h4>
       <hr>
      <div id="option_box">
    <%= form_for "group" , url: {action: "total_students_per_groups"} do |f| %>
      <%= f.label "random" %>
      <%= f.check_box :random  %>
      <%= f.label "even_grade_distribution" %>
      <%= f.check_box :even_grade_distribution%>
      <%= f.label "Total # of students per group" %>
      <%= f.text_field :total_students_per_groups %>
      <%= f.submit "Generate" %>
    <% end %>
      </div>
    </td>
  </tr>
</table>

<table>
  <tr>
    <td>
      <h4 class="subheader"><%= "Options 2"%></h4>
      <hr>
      <div id="option_box">
<%= form_for "group" , url: {action: "total_num_of_groups"} do |f| %>
      <%= f.label "random" %>
      <%= f.check_box :random  %>
      <%= f.label "even_grade_distribution" %>
      <%= f.check_box :even_grade_distribution%>
      <%= f.label "Total # of groups" %>
      <%= f.text_field :total_num_of_groups %>
      <%= f.submit "Generate" %>
    <% end %>
      </div>
    </td>
  </tr>
</table>


