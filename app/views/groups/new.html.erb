
<h1>The New Generation</h1>

   
  <div id="student_list">
    <ul id="student_container">
      <li id="student_element_in_container"><h3>asdf</h3> </li>
      <%@students.each do |student|%>
        <li id="student_element_in_container"><%=student.first_name%> <%= student.last_name %></li>
      <%end%>
    </ul>
  </div>


<div id="option_box_container">

  <table id="option_box_table">
    <fieldset>
      <%= form_for "group" , url: {action: "total_students_per_groups"} do |f| %>
      
        <td colspan="2" style="text-align:center;"><h4 class="subheader">Total Number of<br>Students per Group</h4><hr>
      
        <%= f.check_box :random  %>
        <%= f.label "random" %>
      
        <%= f.check_box :even_grade_distribution%>
        <%= f.label "even_grade_distribution" %>
      
        <td colspan="2"><%= f.label "Total # of students per group" %><%= f.text_field :total_students_per_groups %>
      
        <td colspan="2"><%= f.submit "Generate", class: "small button success", style: "float:right;" %>
      </fieldset>
    <% end %>
  </table>

  <table id="option_box_table">
    <fieldset>
      <%= form_for "group" , url: {action: "total_num_of_groups"} do |f| %>
      
        <td colspan="2" style="text-align:center;"><h4 class="subheader">Total Number of Groups</h4><hr>
      
        <%= f.check_box :random  %>
        <%= f.label "random" %>
      
        <%= f.check_box :even_grade_distribution%>
        <%= f.label "even_grade_distribution" %>
      
        <td colspan="2"><%= f.label "# of groups" %><%= f.text_field :total_num_of_groups %>
      
        <td colspan="2"><%= f.submit "Generate", class: "small button success", style: "float:right;" %>
      </fieldset>
    <% end %>
  </table>

</div>

  

