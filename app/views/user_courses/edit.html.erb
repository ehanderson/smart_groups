<h3>Update Students Info</h3>




<table id="student_info_update_table">
  <tr>
    <th>Name:</th>
    <th>Assignment<br>Name:</th>
    <th>Start<br>Date:</th>
    <th>Due<br>Date:</th>
    <th>Assignment<br>Grade:</th>
    <th>Grade:</th>
  </tr>
  <% @completed_assignments.each do |student_assignment| %>

  <tr><td colspan="6"><hr></td></tr>
  <tr>
    <td>
      <%= student_assignment.student.first_name %> <%= student_assignment.student.last_name %>
    </td>
    <td>
      <%= student_assignment.assignment.assignment_name %>
    </td>
    <td>
      <%= student_assignment.assignment.assignment_name %>
    </td>
    <td>
      <%= student_assignment.assignment.start_date %>
    </td>
    <td>
      <%= student_assignment.assignment.due_date %>
    </td>
    <td>
      <%= form_for :student_assignment, :method => 'put' do |f| %>
        <%= f.text_field :grade, {value: student_assignment.grade}%>
        <%= f.hidden_field :id, {value: student_assignment.id} %>
        <%= f.submit "Save Assignment", :confirm => "Are you sure?", class: "small button success", style: "width:150px;float:right;"%>
      <% end %>
      <%= link_to "Delete Assignment",
                  "/users/#{params[:user_id]}/students/#{student_assignment.id}",
                  :method => :delete,
                  :confirm => "Are you sure?",
                  class: "small button alert",  style: "width:150px;float:right;"%>
    </td>

    </tr>
  <% end %>
</table>
